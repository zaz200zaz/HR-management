<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Resume_Upload">

    <include
        android:id="@+id/aa"
        layout="@layout/return_bar"/>
    <Button
        android:id="@+id/resumeUpload"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/aa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/square_border"
        android:text="XXXの履歴書"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="@color/colorPrimaryDark"/>
    <ImageView
        android:id="@+id/resumeImage"
        app:layout_constraintTop_toBottomOf="@+id/resumeUpload"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/resume"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_bg"
        app:layout_constraintTop_toBottomOf="@id/resumeImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>